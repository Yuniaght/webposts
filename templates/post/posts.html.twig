{% extends 'base.html.twig' %}

{% block title %}WebPosts - Articles{% endblock %}

{% block body %}
    <main class="container">
        <section id="posts">
            <div class="row">
                <h2 class="display-4 my-5">Tous nos articles</h2>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for post in posts %}
                    <div class="col">
                        <div class="card h-100">
                            <h3 class="card-header">{{ post.title }}</h3>
                            <img src="{{ asset('images/posts/' ~post.image) }}" class="card-img-top" alt="{{ post.title }}">
                            <div class="card-body">
                                <h5 class="card_title">{{ post.category.name }}</h5>
                                <p class="card-text">{{ post.content|u.truncate(100, "...", false)}}...</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Créé le {{ post.createdAt|date('d/m/y') }}</li>
                                <li class="list-group-item"><a href="{{ path('app_post', {'slug': post.slug}) }}" class="btn btn-outline-dark">Lire la suite</a></li>
                            </ul>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </main>
{% endblock %}
